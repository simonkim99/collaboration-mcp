# MCP Server Configuration

# Transport mode: 'stdio' or 'http'
MCP_TRANSPORT=stdio

# HTTP Transport settings
MCP_HTTP_PORT=8091

# HTTPS Transport settings (when MCP_TRANSPORT=https)
# MCP_HTTPS_PORT=443
# MCP_SSL_CERT=/path/to/cert.pem
# MCP_SSL_KEY=/path/to/key.pem

# CORS settings
# MCP_CORS_ORIGINS=http://ubun-ai.local:8091,https://example.com

# OAuth2 Authentication Settings
# Enable OAuth2 authentication
MCP_OAUTH2_ENABLED=false

# Synology OAuth2 Server Configuration
MCP_OAUTH2_ISSUER=https://backup.local:5001/webman/sso
MCP_OAUTH2_CLIENT_ID=your-client-id-from-synology
MCP_OAUTH2_CLIENT_SECRET=your-client-secret-from-synology

# OAuth2 Endpoints (defaults to issuer-based paths if not set)
# MCP_OAUTH2_AUTHORIZATION_ENDPOINT=https://backup.local:5001/webman/sso/SSOOauth.cgi
# MCP_OAUTH2_TOKEN_ENDPOINT=https://backup.local:5001/webman/sso/SSOAccessToken.cgi
# MCP_OAUTH2_USERINFO_ENDPOINT=https://backup.local:5001/webman/sso/SSOUserInfo.cgi
MCP_OAUTH2_JWKS_ENDPOINT=https://backup.local:5001/webman/sso/openid-jwks.json

# OAuth2 Token Validation
# MCP_OAUTH2_AUDIENCE=mcp-server
# MCP_OAUTH2_SCOPE=openid profile email

# OAuth2 Redirect URI (must match what's registered in Synology)
# MCP_OAUTH2_REDIRECT_URI=http://ubun-ai.local:8091/oauth2/callback

